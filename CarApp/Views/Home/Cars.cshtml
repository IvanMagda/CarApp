@{
    ViewBag.Title = "Cars";
}

<div class="row">
    <div class="col-md-12">
        <h2>Cars</h2>
        <div class="panel-group">
            @foreach (var car in ViewBag.Cars)
            {
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3 col-sm-2 col-md-2">@car.Model</div>
                            <div class="col-xs-3 col-sm-1 col-md-1">@car.Brand</div>
                            <div class="hidden-xs col-sm-2 col-md-2">@car.CarType</div>
                            <div class="hidden-xs col-sm-2 col-md-2">@car.Price.ToString("C")</div>
                            <div class="hidden-xs col-sm-1 col-md-1">@car.ProductionYear</div>
                            <div class="col-xs-2 col-sm-1 col-md-1"><a data-toggle="collapse" href="#car_@car.Id">Owners</a></div>
                            <div class="col-xs-4 col-sm-2 col-md-2" style="display:flex;">
                                @Html.ActionLink("Edit", "EditCar", new { car.Id }, new { @class = "btn btn-default" })
                            @Html.ActionLink("Delete", "DeleteCar", new { car.Id }, new { @class = "btn btn-default" })
                        </div>
                    </div>
                    </div>
                    <div id="car_@car.Id" class="panel-collapse collapse">
                        <ul class="list-group">
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="hidden-xs col-sm-4 col-md-4"><b>FirstName</b></div>
                                    <div class="col-xs-6 col-sm-4 col-md-4"><b>LastName</b></div>
                                    <div class="col-xs-6 col-sm-4 col-md-4"><b>DrivingExperience</b></div>
                                </div>
                            </li>
                            @foreach (var owner in car.Owners)
                            {
                                <li class="list-group-item">
                                    <div class="row">
                                        <div class="hidden-xs col-sm-4 col-md-4">@owner.FirstName</div>
                                        <div class="col-xs-6 col-sm-4 col-md-4">@owner.LastName</div>
                                        <div class="col-xs-6 col-sm-4 col-md-4">@owner.DrivingExperience</div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-2">
        @Html.ActionLink("Add a new Car", "CreateCar", "Home", null, new { @class = "btn btn-default" })
    </div>
</div>