@model CarApp.Models.DataListViewModel


@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-sm-12 col-md-6">
        <h2>Cars</h2>
        <div class="panel-group">
            @foreach (var car in Model.Cars)
            {
                <div class="panel panel-default">
                    <div class="panel-heading row">
                        <div class="col-xs-6 col-sm-2 col-md-2">@car.Model</div>
                        <div class="hidden-xs col-sm-2 col-md-2">@car.Brand</div>
                        <div class="hidden-xs col-sm-2 col-md-2">@car.CarType</div>
                        <div class="hidden-xs col-sm-3 col-md-3">@car.Price.ToString("C")</div>
                        <div class="hidden-xs col-sm-1 col-md-1">@car.ProductionYear</div>
                        <div class="col-xs-6 col-sm-2 col-md-2"><a data-toggle="collapse" href="#car_@car.Id">Owners</a></div>
                    </div>
                    <div id="car_@car.Id" class="panel-collapse collapse">
                        <ul class="list-group">
                            <li class="list-group-item row">
                                <div class="hidden-xs col-sm-4 col-md-4"><b>FirstName</b></div>
                                <div class="col-xs-6 col-sm-4 col-md-4"><b>LastName</b></div>
                                <div class="col-xs-6 col-sm-4 col-md-4"><b>DrivingExperience</b></div>
                            </li>
                            @foreach (var owner in car.Owners)
                            {
                                <li class="list-group-item row">
                                    <div class="hidden-xs col-sm-4 col-md-4">@owner.FirstName</div>
                                    <div class="col-xs-6 col-sm-4 col-md-4">@owner.LastName</div>
                                    <div class="col-xs-6 col-sm-4 col-md-4">@owner.DrivingExperience</div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }
        </div>
        <div class="row">
            <div class="col-md-2">
                @Html.ActionLink("Add a new Car", "CreateCar", "Home", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
    <div class="col-sm-12 col-md-6">
        <h2>Owners</h2>
        <div class="panel-group">
            @foreach (var owner in Model.Owners)
            {
                <div class="panel panel-default">
                    <div class="panel-heading row">
                        <div class="hidden-xs col-sm-4 col-md-4">@owner.FirstName</div>
                        <div class="col-xs-6 col-sm-4 col-md-4">@owner.LastName</div>
                        <div class="hidden-xs col-sm-2 col-md-2">@owner.DrivingExperience</div>
                        <div class="col-xs-6 col-sm-2 col-md-2"><a data-toggle="collapse" href="#owner_@owner.Id">Cars</a></div>
                    </div>
                    <div id="owner_@owner.Id" class="panel-collapse collapse">
                        <ul class="list-group">
                            <li class="list-group-item row">
                                <div class="col-xs-6 col-sm-2 col-md-2"><b>Model</b></div>
                                <div class="hidden-xs col-sm-2 col-md-2"><b>Brand</b></div>
                                <div class="hidden-xs col-sm-2 col-md-2"><b>CarType</b></div>
                                <div class="hidden-xs col-sm-3 col-md-3"><b>Price</b></div>
                                <div class="hidden-xs col-sm-1 col-md-1"><b>ProductionYear</b></div>
                            </li>
                            @foreach (var car in owner.Cars)
                            {
                                <li class="list-group-item row">
                                    <div class="col-xs-6 col-sm-2 col-md-2">@car.Model</div>
                                    <div class="hidden-xs col-sm-2 col-md-2">@car.Brand</div>
                                    <div class="hidden-xs col-sm-2 col-md-2">@car.CarType</div>
                                    <div class="hidden-xs col-sm-3 col-md-3">@car.Price.ToString("C")</div>
                                    <div class="hidden-xs col-sm-1 col-md-1">@car.ProductionYear</div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }
        </div>
        <div class="row">
            <div class="col-md-2">
                @Html.ActionLink("Add a new Owner", "CreateOwner", "Home", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
</div>